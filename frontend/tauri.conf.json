{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Probe Flasher",
  "version": "0.1.0",
  "identifier": "com.probe-flasher.tool",
  "build": {
    "frontendDist": "ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Probe Flasher",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "languages": ["SimpChinese"],
        "displayLanguageSelector": false
      }
    }
  }
}
